{ 
    "AWSTemplateFormatVersion":"2010-09-09",
    "Parameters":{ 
       "NameTag":{ 
          "Description":"The Name Tag used for the resources to be created.",
          "Type":"String",
          "Default":"DKW"
       },
       "Environment":{ 
          "Description":"The Environment Type",
          "Type":"String",
          "Default":"DEV"
       }
    },
    "Resources":{ 
       "WEBCluster":{ 
          "Type":"AWS::ECS::Cluster",
          "Properties":{ 
             "ClusterName":{ 
                "Fn::Sub":"${NameTag}-${Environment}-WEB-CLUSTER"
             }
          }
       },
       "APICluster":{ 
          "Type":"AWS::ECS::Cluster",
          "Properties":{ 
             "ClusterName":{ 
                "Fn::Sub":"${NameTag}-${Environment}-API-CLUSTER"
             }
          }
       }
    },
    "Outputs":{ 
       "WEBClusterID":{ 
          "Value":{ 
             "Ref":"WEBCluster"
          }
       },
       "APIClusterID":{ 
          "Value":{ 
             "Ref":"APICluster"
          }
       }
    }
 }